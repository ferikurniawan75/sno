<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_gravity="fill_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0">
            <ImageView
                android:id="@id/imageGradient"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/status_bar_gradient"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="100.0" />
            <ImageView
                android:id="@id/imageHWLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:src="@drawable/logo"
                android:contentDescription="@string/img_logo_caption"
                android:alpha="0.8"
                android:layout_marginStart="8.0dip"
                android:layout_marginEnd="8.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="22.0sp"
                android:gravity="center_horizontal"
                android:id="@id/txtCaption"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="@string/inst_accessibility_caption"
                android:textAlignment="center"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageHWLabel"
                style="@style/BaseTextStyle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0">
            <TableLayout
                android:paddingTop="32.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="0"
                android:paddingStart="32.0dip"
                android:paddingEnd="16.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="512.0dip">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_log_select_all"
                        style="@style/BaseTextStyle" />
                    <Switch
                        android:layout_gravity="center_vertical"
                        android:id="@id/cbAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingStart="16.0dip"
                        android:paddingEnd="16.0dip" />
                </TableRow>
                <View
                    android:background="?android:listDivider"
                    android:layout_width="fill_parent"
                    android:layout_height="3.0dip"
                    android:layout_marginTop="8.0dip" />
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="16.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_call_recording"
                        style="@style/BaseTextStyle" />
                    <Switch
                        android:layout_gravity="center_vertical"
                        android:id="@id/swCallRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingStart="16.0dip"
                        android:paddingEnd="16.0dip" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_rec_warning"
                        android:layout_marginStart="16.0dip"
                        style="@style/BaseTextStyle" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="16.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_accessibility_chats"
                        style="@style/BaseTextStyle" />
                    <Switch
                        android:layout_gravity="center_vertical"
                        android:id="@id/swChats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingStart="16.0dip"
                        android:paddingEnd="16.0dip" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:id="@id/txtChatRec"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_chat_recording"
                        android:layout_marginStart="8.0dip"
                        style="@style/BaseTextStyle" />
                    <Switch
                        android:layout_gravity="center_vertical"
                        android:id="@id/swChatRec"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingStart="16.0dip"
                        android:paddingEnd="16.0dip" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_accessibility_chats_list"
                        android:layout_marginStart="16.0dip"
                        style="@style/BaseTextStyle" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="16.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_accessibility_sites"
                        style="@style/BaseTextStyle" />
                    <Switch
                        android:enabled="true"
                        android:layout_gravity="center_vertical"
                        android:id="@id/swWebsites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16.0dip"
                        android:paddingEnd="16.0dip" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inst_accessibility_browsers_list"
                        android:layout_marginStart="16.0dip"
                        style="@style/BaseTextStyle" />
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="18.0sp"
                android:gravity="center_horizontal"
                android:id="@id/txtDescription"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24.0dip"
                android:text="@string/img_empty_description"
                android:alpha="0.0"
                android:textAlignment="center"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintBottom_toTopOf="@id/NextButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/BaseTextStyle" />
            <Button
                android:textColor="@color/button_text_color"
                android:id="@id/NextButton"
                android:background="@drawable/rounded_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32.0dip"
                android:text="@string/next"
                android:fontFamily="@font/muli"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="350.0dip" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>