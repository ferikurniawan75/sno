<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_gravity="fill_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/imageGradient"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/status_bar_gradient"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="100.0" />
            <ImageView
                android:id="@id/imageHWLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:src="@drawable/logo"
                android:contentDescription="@string/img_logo_caption"
                android:alpha="0.8"
                android:layout_marginStart="8.0dip"
                android:layout_marginEnd="8.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="22.0sp"
                android:gravity="center_horizontal"
                android:id="@id/txtCaption"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:text="@string/inst_old_version_found"
                android:textAlignment="center"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageHWLabel"
                style="@style/BaseTextStyle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@id/tableLa"
                android:paddingLeft="32.0dip"
                android:paddingTop="24.0dip"
                android:paddingRight="32.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="416.0dip" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:textColor="@color/button_text_color"
                android:id="@id/NextButton"
                android:background="@drawable/rounded_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="@string/check"
                android:fontFamily="@font/muli"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintBottom_toTopOf="@id/txtCancelInstall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/txtCancelInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:text="@string/ignore"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/BaseTextStyle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>