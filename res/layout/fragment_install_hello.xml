<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_gravity="fill_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/imageGradient"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/status_bar_gradient"
            android:scaleType="fitXY"
            android:contentDescription="@string/img_empty_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="100.0" />
        <ImageView
            android:id="@id/imageHWLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:src="@drawable/logo"
            android:contentDescription="@string/img_logo_caption"
            android:alpha="0.8"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="22.0sp"
            android:gravity="center_horizontal"
            android:id="@id/textTitle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="@string/inst_hello_caption"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageHWLabel"
            style="@style/BaseTextStyle" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:gravity="center_horizontal"
            android:id="@id/txtDescription"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:text="@string/inst_hello_hint"
            android:textAlignment="center"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:layout_constraintBottom_toTopOf="@id/NextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BaseTextStyle" />
        <Button
            android:textColor="@color/button_text_color"
            android:id="@id/NextButton"
            android:background="@drawable/rounded_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/next"
            android:fontFamily="@font/muli"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:layout_constraintBottom_toTopOf="@id/txtCancelInstall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="350.0dip" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="180.0sp"
            android:textColor="@color/brandcolor"
            android:gravity="center_horizontal"
            android:id="@id/txtPhone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/grial_shape_phone_large"
            android:fontFamily="@font/grialshapes"
            android:textAlignment="center"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:layout_constraintBottom_toTopOf="@id/txtDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTitle" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="50.0sp"
            android:textColor="@color/brandcolor"
            android:gravity="center_horizontal"
            android:id="@id/txtEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/awesome_shape_eye"
            android:fontFamily="@font/fontawesome"
            app:layout_constraintBottom_toBottomOf="@id/txtPhone"
            app:layout_constraintEnd_toEndOf="@id/txtPhone"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@id/txtPhone"
            app:layout_constraintTop_toTopOf="@id/txtPhone"
            app:layout_constraintVertical_bias="0.264" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/txtCancelInstall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:text="@string/inst_hello_cancel"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BaseTextStyle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>