                </TableRow>
                <TableRow
                    android:id="@id/tbrA11yDesc"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.appcompat.widget.AppCompatTextView
